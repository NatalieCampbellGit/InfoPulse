<div data-id="{{id}}" class="user-factsheet-listitem rounded border-2 
  border-pulse-bluegrey-300 bg-white p-2 shadow-lg cursor-pointer">
  <h3 class="text-base font-bold text-pulse-blue-700">{{template.title}}</h3>

  {{#if has_custom_markdown}}
  <div class="pl-2 text-sm text-pulse-bluegrey-900">
    <p class="personal-note text-xs text-pulse-bluegrey-900">Personalised Note:</p>
  </div>
  <div class="text-sm border-2 border-pulse-bluegrey-200 rounded-md p-2">
    {{custom_markdown}}
  </div>
  {{/if}}
  {{#if has_usercomments}}
  <div class="pl-2 text-sm text-pulse-bluegrey-900">
    <p class="personal-note text-xs text-pulse-bluegrey-900">User Comments:</p>
  </div>
  <!-- Iterate over your comments and create an <li> for each one -->
  {{#each usercomments as |usercomment|}}
  <div class="pl-2 text-sm text-pulse-bluegrey-900">
    <p class="text-xs">{{usercomment.content}}</p>
    <p class="text-xs text-gray-500">Created at:
      {{format_date usercomment.createdAt}}
      {{format_time usercomment.createdAt}}</p>
  </div>
  {{/each}}
  {{/if}}
</div>
</div>