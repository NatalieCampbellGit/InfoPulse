<div data-id="{{id}}" class="user-factsheet-listitem rounded border-2
  border-pulse-green-300 bg-white p-2 shadow-lg cursor-pointer">
    <div class="flex items-center justify-between">
        <h3 class="text-base font-bold text-pulse-blue-700">{{template.title}}</h3>
        <span class="toggle-icon" id="toggle-icon-{{id}}">â–¼</span>
    </div>
    <div class="factsheet-content hidden">
        <p>{{template.content}}</p>
        <p class="text-xs text-gray-500">Created at: {{format_date template.createdAt}} {{format_time template.createdAt}}</p>
    </div>
    <!-- Iterate over your comments and create an <li> for each one -->
    {{#each usercomments as |usercomment|}}
    <div class="pl-2 text-sm text-pulse-grey-dark">
        <p class="text-xs">{{usercomment.content}}</p>
        <p class="text-xs text-gray-500">Created at: {{format_date usercomment.createdAt}} {{format_time usercomment.createdAt}}</p>
    </div>
    {{/each}}
</div>
