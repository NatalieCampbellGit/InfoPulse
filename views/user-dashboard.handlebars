<section class="bg-pulse-bluegrey-50">
  {{!-- new layout --}}
  <div class="flex flex-col md:flex-row md:space-x-1">
    <div class="md:w-1/3 bg-pulse-bluegrey-50 m-2 text-pulse-bluegrey-500">
      <div class="max-h-96 overflow-y-auto p-0 bg-white">
        <h2>Your Factsheets</h2>
        <div class="border-2 border-pulse-bluegrey-300 p-4 mb-4">
          {{#each factsheets as |factsheet|}}
          {{> user-dashboard-factsheet-listitem}}
          {{/each}}
        </div>
      </div>
      {{!-- Comments --}}
      <div class="user-comments">
        <hr class="my-4 border-2 border-pulse-bluegrey-700">
        <h2 class="text-xl font-bold mb-2">Your Own Comments:</h2>
        {{#each factsheets as |factsheet|}}

        {{#if hasComments}}
        <div class="px-4 ">
          {{#each usercomments as |usercomment|}}
          <div class="user-comment pl-2 text-sm text-pulse-bluegrey-900 my-2" data-id="{{usercomment.id}}"
            data-factsheet-id="{{usercomment.factsheet_id}}">
            <p class="text-xs">{{usercomment.content}}</p>
            <p class="text-xs text-pulse-bluegrey-300">Created at:
              {{format_date usercomment.createdAt}}
              {{format_time usercomment.createdAt}}</p>
          </div>
          {{/each}}

        </div>
        {{/if}}
        {{/each}}

        <hr class="my-4 border-2 border-pulse-bluegrey-400">
        <div>
          <!-- Buttons section -->
          <div class="flex justify-end mt-4">
            <button class="bg-pulse-blue-500 hover:bg-pulse-blue-700 text-white rounded px-4 py-2 mr-2"
              id="add-comment">Add
              Comment</button>
            <button class="bg-pulse-green-500 hover:bg-pulse-green-700 text-white rounded px-4 py-2"
              id="save-comment">Save
              Comment</button>
            <!-- <button class="btn btn-danger" id="log-out">Log Out</button> -->
          </div>
        </div>
      </div>

    </div>

    <div class="md:w-2/3 bg-white text-pulse-bluegrey-600 p-4">
      <h2 id="factsheet-title">Select a Factsheet to View</h2>
      <!-- Add your content here -->
      {{#each factsheets as |factsheet|}}
      <div class="factsheet-html  border-2 border-pulse-bluegrey-300 p-4 mb-4" data-id="{{factsheet.id}}">
        {{#if hasCustomMarkdown}}
        <div class="custom-html" data-id="{{id}}">
          <hr class="my-4 border-2 border-pulse-bluegrey-700">
          <h2 class="text-xl font-bold mb-2">Your Personalised Information:</h2>
          <div class="px-4 ">
            {{{custom_html}}}
          </div>
          <hr class="my-4 border-2 border-pulse-bluegrey-400">
        </div>
        {{/if}}
        <div class="px-4 py-2">
          {{{template.html}}}
        </div>
      </div>
      <!-- Iterate over your comments and create an <li> for each one -->
      {{#each usercomments as |usercomment|}}
      <div class="user-comment ">
        <p class="text-xl font-bold mb-2">Your Comment:</p>
        <div class="pl-2  text-pulse-bluegrey-900">
          <p class="text-base">{{usercomment.content}}</p>
          <p class="text-xs text-gray-500">Created at:
            {{format_date usercomment.createdAt}}
            {{format_time usercomment.createdAt}}</p>
        </div>
      </div>
      {{/each}}
      {{/each}}
    </div>
  </div>
</section>



<script src="/assets/js/user-dashboard.js"></script>