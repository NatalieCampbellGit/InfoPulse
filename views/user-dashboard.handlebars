<!-- User Dashboard -->
<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">{{title}}</h1>

    <div class="post-box bg-white p-4 mb-4">
      <h2 class="text-xl font-bold mb-2">Past Posts</h2>
      {{#each pastPosts}}
      <div>
        <h3>{{title}}</h3>
        <!-- Remove the line below to display only titles -->
        <p>{{content}}</p>
      </div>
      {{/each}}
    </div>

    <div class="text-box bg-white p-4 mb-4">
      <h2 class="text-xl font-bold mb-2">Compose Post</h2>
      <!-- Text editor with options like Bold, Italics, etc. -->
      <textarea id="post-content" class="border border-gray-300 p-2 w-full"></textarea>
    </div>

    <div class="button-group">
      <button class="btn btn-primary mr-2" id="add-comment">Add Comment</button>
      <button class="btn btn-success mr-2" id="save-comment">Save Comment</button>
      <button class="btn btn-info mr-2" id="edit-profile">Edit Profile</button>
      <button class="btn btn-danger" id="log-out">Log Out</button>
    </div>
  </div>
</body>