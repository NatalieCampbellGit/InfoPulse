<div class="max-w-screen-2xl mx-auto bg-white">

    <div id="data-store" data-user-id="{{userId}}" data-template-id="">
        <Section class="px-6 py-4">
            <div class="grid lg:grid-cols-3 grid-cols-1 gap-4">
                <div class="col border-2 border-pulse-blue-300 bg-pulse-bluegrey-50 shadow-lg rounded p-2">
                    <h2 class="text-2xl font-bold mb-2 text-pulse-blue-500 text-center">Manage Templates</h2>
                    <hr class="border-2 border-pulse-blue-300 my-2">
                    <!-- UI Elements for Column 1 -->
                    <div id="select-template">
                        <div class="mx-auto px-1 sm:px-2 bg-pulse-bluegrey-50">
                            {{!-- display a component to select a template --}}
                            {{> template-select }}
                        </div>
                    </div>
                </div>
                <div class="col border-2 border-pulse-blue-300 bg-pulse-bluegrey-50 shadow-lg rounded p-2">
                    <h2 class="text-2xl font-bold mb-2 text-pulse-blue-500 text-center">User Factsheets</h2>
                    <hr class="border-2 border-pulse-blue-300 my-2">
                    <!-- UI Elements for Column 3 -->
                    <div class="col">
                        {{> user-select }}
                    </div>
                </div>
                <div class="col border-2 border-pulse-blue-300 bg-pulse-bluegrey-50 shadow-lg rounded p-2">
                    <h2 class="text-2xl font-bold mb-2 text-pulse-blue-500 text-center">Enrol New User</h2>
                    <hr class="border-2 border-pulse-blue-300 my-2">
                    </hr>
                    <!-- UI Elements for Column 2 -->
                    {{> user-register }}
                    <div class="flex justify-center">
                        <button class="w-auto bg-pulse-blue-500 hover:bg-pulse-blue-500 text-white rounded px-4 py-2"
                            id="registerButton" onclick="toggleRegister()">Register a
                            User</button>
                    </div>
                </div>
            </div>
        </Section>
    </div>
    <!-- end temporary layout -->

    <script src="/assets/js/admin-dashboard.js"></script>