<!DOCTYPE html>
<html lang="en-au">

<head>
    <!-- default CSS -->
    <link rel="stylesheet" href="/assets/css/jass.css">
    <!-- font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
        rel="stylesheet">
    <script src="https://kit.fontawesome.com/59c3993d07.js" crossorigin="anonymous"></script>
    <!-- tailwind css -->
    <link rel="stylesheet" href="/assets/css/styles.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/assets/css/factsheet.css">
    <link rel="stylesheet" href="/assets/css/custom.css">
    <!-- Custom JS -->
    <script src="/assets/js/script.js" defer></script>
</head>

<body class="bg-gray-200 font-sans w-full">
    <div class="sm:shadow-2xl flex flex-col min-h-screen bg-pulse-bluegrey-50 w-full md:max-w-screen-2xl mx-auto">
        <!-- Header -->
        {{> header}}

        <!-- Page Title -->
        <div class="">
            <h1 class="text-3xl font-bold text-pulse-blue-600 text-center my-1 py-2">{{pageTitle}}</h1>
            <hr class="border-2 border-pulse-blue-300 my-1">
        </div>

        <main>
            <div class="body-stuff">
                {{{body}}}
            </div>
        </main>

        <!-- Footer -->
        {{> footer}}
    </div>
    <!-- Modals -->
    {{>feedback-modal}}
    {{>confirmation-modal}}

</body>

</html>